-- Tabla de usuarios
CREATE TABLE usuarios (
    id INT IDENTITY(1,1) PRIMARY KEY,
    nombre NVARCHAR(100) NOT NULL,
    apellido NVARCHAR(100) NOT NULL,
    estado_civil NVARCHAR(50),
    dni NVARCHAR(20) NOT NULL UNIQUE,
    nacionalidad NVARCHAR(255),
    fecha_nacimiento DATE,
    direccion NVARCHAR(255),
    codigo_postal NVARCHAR(20),
    provincia NVARCHAR(100),
    telefono NVARCHAR(20) NOT NULL UNIQUE,
    email NVARCHAR(100) NOT NULL UNIQUE,
    es_moroso BIT,
    profesion NVARCHAR(100),
    salario FLOAT,
    numero_cuenta NVARCHAR(24) NOT NULL UNIQUE,
    tipo_cuenta NVARCHAR(20) NOT NULL,
    saldo FLOAT NOT NULL,
    antiguedad_cliente DATE,
    genero NVARCHAR(20)

);

-- Tabla de cr√©ditos
CREATE TABLE creditos (
    id INT IDENTITY(1,1) PRIMARY KEY,
    usuario_id INT,
    monto DECIMAL(18, 2),
    fecha_inicio DATE,
    fecha_fin DATE,
    estado NVARCHAR(50), -- Ej: 'pendiente', 'pagado'
    FOREIGN KEY (usuario_id) REFERENCES usuarios(id)
);

-- Tabla de empleos
CREATE TABLE empleos (
    id INT IDENTITY(1,1) PRIMARY KEY,
    usuario_id INT,
    empresa NVARCHAR(255),
    
    fecha_inicio DATE,
    FOREIGN KEY (usuario_id) REFERENCES usuarios(id)
);

-- Tabla de activos
CREATE TABLE activos (
    id INT IDENTITY(1,1) PRIMARY KEY,
    usuario_id INT,
    tipo NVARCHAR(100),
    valor DECIMAL(18, 2),
    FOREIGN KEY (usuario_id) REFERENCES usuarios(id)
);

-- Tabla de monedas digitales
CREATE TABLE monedas (
    id INT IDENTITY(1,1) PRIMARY KEY,
    usuario_id INT,
    nombre NVARCHAR(100),
    cantidad DECIMAL(18, 4),
    FOREIGN KEY (usuario_id) REFERENCES usuarios(id)
);

-- Tabla de cuentas bancarias
CREATE TABLE cuentas (
    id INT IDENTITY(1,1) PRIMARY KEY,
    usuario_id INT,
    numero_cuenta NVARCHAR(50) UNIQUE,
    saldo DECIMAL(18, 2) DEFAULT 0,
    tipo NVARCHAR(50), -- Ej: 'ahorro', 'corriente'
    FOREIGN KEY (usuario_id) REFERENCES usuarios(id)
);
